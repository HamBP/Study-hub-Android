<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/syswhite"
    tools:context=".fragment_main.StudyFragment01">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fm01_linear01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fs01_btn_adjust"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/btn_background_stroke_bg_50"
                android:drawableTop="@drawable/resized_icon_adjustment_24" />

            <View
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/BG_30" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/fs01_chipGroup01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/BG_30" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            >

            <LinearLayout
                android:id="@+id/fm01_linear02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fs01_btn_latestOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:text="@string/btn_latestOrder"
                    android:textColor="@color/sysblack1"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/fs01_line01"
                    android:layout_width="2dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/BG_50" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fs01_btn_popularOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:text="@string/btn_popularOrder"
                    android:textColor="@color/sysblack1"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/fs01_txt_list_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_list_number"
                android:textColor="@color/BG_80"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/BG_30" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_non_study"/>


    </RelativeLayout>


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>