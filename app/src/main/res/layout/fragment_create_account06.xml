<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_login.CreateAccountFragment06">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fca06_subconstraint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w, 1.03:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/fca06_linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical|start"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/fca06_linearlayout2"
            app:layout_constraintLeft_toLeftOf="@id/fca06_subconstraint"
            app:layout_constraintRight_toRightOf="@id/fca06_subconstraint"
            app:layout_constraintTop_toTopOf="@id/fca06_subconstraint"
            app:layout_constraintVertical_weight="1">


            <TextView
                android:id="@+id/fca06_txt_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt1_interest"
                android:textColor="@color/syswhite"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/fca06_txt_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt2_interest"
                android:paddingTop="16sp"
                android:textColor="@color/G_40"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fca06_linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/fca06_linearlayout3"
            app:layout_constraintLeft_toLeftOf="@id/fca06_subconstraint"
            app:layout_constraintRight_toRightOf="@id/fca06_subconstraint"
            app:layout_constraintTop_toBottomOf="@id/fca06_linearlayout1"
            app:layout_constraintVertical_weight="1.2">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/fca06_linearlayout3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|bottom"
            android:orientation="vertical"
            android:weightSum="4"
            app:layout_constraintTop_toBottomOf="@+id/fca06_linearlayout2"
            app:layout_constraintLeft_toLeftOf="@+id/fca06_subconstraint"
            app:layout_constraintRight_toRightOf="@+id/fca06_subconstraint"
            app:layout_constraintBottom_toBottomOf="@id/fca06_subconstraint"
            app:layout_constraintVertical_weight="0.8">

            <Button
                android:id="@+id/fca06_btn_next"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:backgroundTint="@color/O_50"
                android:text="@string/btn_complete"
                android:textColor="@color/syswhite"
                android:textSize="16sp"/>
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>